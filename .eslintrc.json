{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:react/recommended",
		"plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
		"jest"
    ],
    "rules": {
		"react/prop-types": "off",
		"indent": ["error", "tab"],
        "no-tabs": ["error", {"allowIndentationTabs":true}],
        "semi": ["error", "always"],
		"import/order": ["error", { "alphabetize": { "order": "asc", "caseInsensitive": true } }],
		"quotes": ["error", "single"],
		"jsx-quotes": ["error", "prefer-double"]
    },
	"settings": {
		"react": {
			"version": "detect" // You can also specify the exact React version, e.g., "16.14.0"
		}
	}
}
